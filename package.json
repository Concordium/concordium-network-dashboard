{
  "name": "concordium-dashboard",
  "version": "1.0.2",
  "description": "Concordium Network Dashboard",
  "main": "dashboard-backend.js",
  "engines": {
    "node": ">=14",
    "npm": ">=7.20"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "formatcheck": "elm-format src/elm/ --validate",
    "build": "npm run clean && NODE_ENV=production webpack && cp -rp public/* dist",
    "dev": "webpack-dev-server"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Concordium/concordium-network-dashboard.git"
  },
  "license": "Apache-2.0",
  "author": "Concordium",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@types/node": "^16.10.1",
    "babel-loader": "^8.2.2",
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.5",
    "elm-webpack-loader": "^8.0.0",
    "html-webpack-plugin": "^5.3.2",
    "typescript": "^4.4.3",
    "webpack": "^5.55.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.0"
  }
}
