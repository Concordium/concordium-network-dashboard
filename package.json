{
  "name": "concordium-dashboard",
  "version": "1.0.0",
  "description": "Concordium Network Dashboard POC",
  "main": "dashboard-backend.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "start": "node dashboard-backend.js",
    "start:prod": "NODE_ENV=production node dashboard-backend.js",
    "build-client": "NODE_ENV=production webpack -p && cp -rp assets dist/public",
    "dev-client": "webpack-dev-server -w",
    "dev-client:hot": "webpack-dev-server -w --hot",
    "build-server": "tsc -p ./src/server",
    "dev-server": "tsc-watch -p ./src/server --onSuccess \"node dashboard-backend.js\"",
    "dev": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run dev-server\" \"npm run dev-client\"",
    "dev:hot": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run dev-server\" \"npm run dev-client:hot\"",
    "build": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run build-server\" \"npm run build-client\""
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "keywords": [
    "typescript",
    "react",
    "starter-kit",
    "webpack",
    "fullstack",
    "express",
    "express4",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:Concordium/dashboard.git"
  },
  "license": "MIT",
  "author": "Concordium",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupEnzyme.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig-for-tests.json"
      }
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "@grpc/proto-loader": "^0.5.5",
    "body-parser": "^1.19.0",
    "commander": "^6.0.0",
    "express": "^4.17.1",
    "grpc": "^1.24.3",
    "http-auth": "^4.1.2",
    "http-proxy-middleware": "^1.0.5",
    "interval-promise": "^1.4.0",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/enzyme": "^3.10.5",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/ws": "^7.2.6",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.0",
    "cssnano": "^4.1.10",
    "elm": "^0.19.1-3",
    "elm-hot-webpack-loader": "^1.1.7",
    "elm-typescript-interop": "0.0.17",
    "elm-webpack-loader": "^6.0.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.5.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.2.2",
    "open-browser-webpack-plugin": "^0.0.5",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.4",
    "tsc-watch": "^4.2.9",
    "tslib": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
