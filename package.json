{
  "name": "concordium-dashboard",
  "version": "1.0.0",
  "description": "Concordium Network Dashboard POC",
  "main": "dashboard-backend.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "start": "node dashboard-backend.js",
    "start:prod": "NODE_ENV=production node dashboard-backend.js",
    "build-client": "NODE_ENV=production webpack -p && cp -rp assets dist/public",
    "dev-client": "webpack-dev-server -w",
    "dev-client:hot": "webpack-dev-server -w --hot",
    "build-server": "tsc -p ./src/server",
    "dev-server": "tsc-watch -p ./src/server --onSuccess \"node dashboard-backend.js\"",
    "dev-collector": "COLLECTOR_NAME=testnode1 tsc-watch -p ./src/server --onSuccess \"node dashboard-collector -h localhost:11103\"",
    "dev-collector2": "COLLECTOR_NAME=testnode2 tsc-watch -p ./src/server --onSuccess \"node dashboard-collector -h localhost:11102\"",
    "dev-collector3": "COLLECTOR_NAME=testnode3 tsc-watch -p ./src/server --onSuccess \"node dashboard-collector -h localhost:11123\"",
    "dev": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run dev-server\" \"npm run dev-client\"",
    "dev:hot": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run dev-server\" \"npm run dev-client:hot\"",
    "build": "npm run clean && concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"blue,magenta\" \"npm run build-server\" \"npm run build-client\""
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "keywords": [
    "typescript",
    "react",
    "starter-kit",
    "webpack",
    "fullstack",
    "express",
    "express4",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:Concordium/dashboard.git"
  },
  "license": "MIT",
  "author": "Concordium",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupEnzyme.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig-for-tests.json"
      }
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@grpc/proto-loader": "^0.4.0",
    "body-parser": "^1.18.3",
    "commander": "^2.19.0",
    "express": "^4.16.4",
    "grpc": "^1.18.0",
    "http-auth": "^3.2.3",
    "http-proxy-middleware": "^0.19.1",
    "interval-promise": "^1.3.0",
    "lodash": "^4.17.11",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@types/enzyme": "^3.1.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/ws": "^6.0.1",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.8",
    "elm": "^0.19.0",
    "elm-hot-webpack-loader": "^0.9.2",
    "elm-typescript-interop": "0.0.11",
    "elm-webpack-loader": "^5.0.0",
    "enzyme": "^3.8.0",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "open-browser-webpack-plugin": "github:rodrigopandini/open-browser-webpack-plugin",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "tsc-watch": "^1.0.31",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.4",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
